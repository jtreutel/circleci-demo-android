# update_fastlane

default_platform(:android)

platform :android do
  desc "Submit a new Beta Build to Firebase App Distribution"
  lane :beta do
    gradle(task: "assembleDebug")
    firebase_app_distribution(
      app: "1:332685423350:android:cb54c294c4790abd64b2d7"
    )
  end
end
